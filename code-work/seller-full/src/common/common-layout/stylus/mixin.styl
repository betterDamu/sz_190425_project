bg-image($name)
  background-size 100% 100%
  @media screen and (-webkit-device-pixel-ratio:2)
    background-image url($name + "@2x.png")
  @media screen and (-webkit-device-pixel-ratio:3)
    background-image url($name + "@3x.png")

border-1px($color)
  position relative
  &:after
    content ""
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    background $color
    @media screen and (-webkit-device-pixel-ratio:2)
        transform scaleY(.5)
    @media screen and (-webkit-device-pixel-ratio:3)
      transform scaleY(.3333333333333333333333333333333333)